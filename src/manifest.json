{
  "name": "BPassword",
  "description": "BPassword extension for chrome",
  "version": "0.1.0",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "BPassword",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      }
    },
    "lock": {
      "description": "Lock the extension",
      "name": "lock",
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_matches": ["*://extensions/*"],
      "css": ["share/css/injet.css"],
      "js": ["bpjet/contentscript.js", "bpjet/bpjet.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "bpjet/bpjet.js",
    "bpjet/injet.css",
    "icons/*",
    "share/*",
    "inputor/inputor.css",
    "inputor/inputor.html",
    "inputor/inputor.js"
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "externally_connectable": {
    "ids": ["*"],
    "matches": ["*://extensions/*"],
    "accepts_tls_channel_id": false
  },
  "permissions": ["<all_urls>", "tabs", "activeTab", "management", "storage", "unlimitedStorage", "nativeMessaging"]
}
